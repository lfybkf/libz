		<Transition Name="Do" From="First" To="Last" Info="one trans" 
								Checks="IsAllGood IsUserHasRights IsNot"
								Acts="Make"
								/>
		<Check Name="IsUserHasRights" Info="test user rights" />
		<Check Name="IsAllGood" />
		<Act Name="Make">
			<Comment Author="me">Big brown fox</Comment>
		</Act>
		<Act Name="DoOne" />
		<Act Name="DoTwo" />
		<Device Name="Connection" Type="SqlConnection" Info="conn to DB" />
	</Machine>
</ROOT>

