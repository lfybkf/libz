			<Check Name="IsUserHasRights" Info="test user rights"/>
			<Check Name="IsAllGood" />
			<Act Name="Make" />
		</Transition>
		<Device Name="Connection" Type="SqlConnection" Info="conn to DB" />
	</Machine>
</ROOT>

